<aura:component
  implements="force:lightningQuickActionWithoutHeader,force:hasRecordId"
  controller="EmailController"
>
  <!-- Attributes -->
  <aura:attribute name="status" type="Boolean" default="" />
  <!-- Events -->
  <aura:handler name="init" value="{! this }" action="{! c.init }" />
  <!-- Layout -->
  <aura:html tag="style">
    .baseDefault { height:100%; } .forceChatterPublisherPresentationPanel{
    height:100%; } .bodyWrapper{ height:100%; } .cuf-content{ height:100%; }
    .container{ height:100%; } .forceChatterPublisherPresentationPanel{
    height:100%; }
  </aura:html>
  <aura:if isTrue="{!v.status == ''}">
    <lightning:spinner alternativeText="Sending emails..." />
  </aura:if>
  <div class="slds-align_absolute-center" style="height: 100%">
    <aura:if isTrue="{!v.status == 'Success'}">
      <lightning:icon
        iconName="action:approval"
        alternativeText="Approved"
        title="Approved"
      />
    </aura:if>
    <aura:if isTrue="{!v.status == 'Error'}">
      <lightning:icon
        iconName="utility:error"
        alternativeText="Error!"
        variant="error"
        title="error variant"
      />
    </aura:if>
  </div>
</aura:component>
