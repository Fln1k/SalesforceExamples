<aura:component>
  <!-- Attributes -->
  <aura:attribute name="canBack" type="Boolean" />
  <aura:attribute name="canNext" type="Boolean" />
  <!-- Events -->
  <aura:registerEvent name="changeStageEvent" type="c:changeStage" />
  <aura:registerEvent name="closeModalEvent" type="c:closeModal" />
  
  <aura:handler name="init" value="{!this}" action="{!c.initializeButtons}" />
  <aura:handler
    event="c:changeButtonsAvailableState"
    action="{!c.handleButtonsAvailableState}"
  />
  <!-- Latyout -->
  <lightning:button
    aura:id="BACK"
    label="Previous"
    variant="brand"
    value="-1"
    onclick="{!c.changeStageFunction}"
    disabled="{!(!v.canBack)}"
  />
  <lightning:button
    aura:id="Cancel"
    label="Cancel"
    onclick="{!c.closeModalFunction}"
  />
  <aura:renderIf isTrue="{!v.canNext}">
    <lightning:button
      aura:id="Next"
      label="Next"
      variant="brand"
      value="1"
      onclick="{!c.changeStageFunction}"
    />
  </aura:renderIf>
  <aura:renderIf isTrue="{!(!v.canNext)}">
    <lightning:button
      aura:id="Finsih"
      label="Finsih"
      variant="brand"
      value="0"
      onclick="{!c.changeStageFunction}"
    />
  </aura:renderIf>
</aura:component>
