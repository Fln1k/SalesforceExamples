<aura:component controller="customFlowController">
  <!-- Attributes -->
  <aura:attribute name="billingStreet" type="String" default="Pushkina" />
  <aura:attribute name="billingCity" type="String" default="Minsk" />
  <aura:attribute name="billingCountry" type="String" default="Belarus" />
  <aura:attribute name="billingPostalCode" type="String" default="94105" />
  <aura:attribute name="billingProvince" type="String" default="CA"/>
  <aura:attribute name="billingCountryOptions" type="List" default="[]" />
  <aura:attribute name="shippingStreet" type="String" default="Kolotushkina" />
  <aura:attribute name="shippingCity" type="String" default="Minsk" />
  <aura:attribute name="shippingCountry" type="String" default="Belarus" />
  <aura:attribute name="shippingPostalCode" type="String" default="94105" />
  <aura:attribute name="shippingProvince" type="String" default="CA"/>
  <aura:attribute name="shippingCountryOptions" type="List" default="[]" />
  <aura:attribute name="accountId" type="Id" default=''/>
  <aura:attribute name="opportunityId" type="Id" default=''/>
  <!-- Events -->
  <aura:handler name="init" value="{! this }" action="{! c.init }"/>
  <!-- Layout -->
  <table>
    <tr>
      <td style="padding-right: 20px;">
        <c:strike_lookup
          aura:id="accountShowLookupField"
          label="Account"
          object="Account"
          value="{!v.accountId}"
          iconName="standard:account"
          searchField="Name"
          disabled="true"
        />
      </td>
      <td>
        <c:strike_lookup
          aura:id="opportunityLookupField"
          label="Opportunity"
          object="Opportunity"
          value="{!v.opportunityId}"
          searchField="Name"
          disabled="true"
        />
      </td>
    </tr>
    <tr>
      <td style="padding-right: 20px;">
        <lightning:input
          type="email"
          name="email3"
          placeholder="address@company.com"
          label="Email"
        />
      </td>
      <td>
        <lightning:input
          type="url"
          label="Web Site"
          name="input3"
          placeholder="Enter url here..."
        />
      </td>
    </tr>
    <tr>
      <td style="padding-right: 20px;">
        <lightning:inputAddress
          addressLabel="Billing adress"
          streetLabel="Street"
          cityLabel="City"
          countryLabel="Country"
          provinceLabel="Province/State"
          postalCodeLabel="PostalCode"
          street="{! v.billingStreet }"
          city="{! v.billingCity }"
          country="{! v.billingCountry }"
          countryOptions="{! v.billingCountryOptions }"
          postalCode="{!v.billingPostalCode}"
          province="{!v.billingProvince}"
        />
      </td>
      <td>
        <lightning:inputAddress
          addressLabel="Shipping adress"
          streetLabel="Street"
          cityLabel="City"
          countryLabel="Country"
          provinceLabel="Province/State"
          postalCodeLabel="PostalCode"
          street="{! v.shippingStreet }"
          city="{! v.shippingCity }"
          country="{! v.shippingCountry }"
          countryOptions="{! v.shippingCountryOptions }"
          postalCode="{!v.shippingPostalCode}"
          province="{!v.shippingProvince}"
        />
      </td>
    </tr>
  </table>
</aura:component>
